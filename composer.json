{
    "name": "daikon/oroshi",
    "type": "project",
    "description": "Boilerplate setup for Daikon CQRS based PHP7.2 applications.",
    "homepage": "https://github.com/daikon/oroshi",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.2",
        "oroshi/oroshi-core": "master@dev",
        "egulias/email-validator": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "squizlabs/php_codesniffer": "^3.3",
        "symfony/var-dumper": "^4.1",
        "vimeo/psalm": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Oro\\Testing\\": "app/crates/oro-testing/src",
            "Oro\\Security\\": "app/crates/oro-security/src"
        }
    },
    "autoload-dev": {
        "psr-4": { "Oroshi\\Tests\\": "tests" }
    },
    "archive": {
        "exclude": [
            "/build",
            "/vendor"
        ]
    },
    "scripts": {
        "build": [ "@sniff", "@tests" ],
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' app/lib tests/",
        "code-sniffer-autofix": "phpcbf --standard=PSR2 -d tabWidth=4 src/ tests/",
        "copy-paste-detector": "phpcpd app/lib tests/ || true",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json",
            "psalm"
        ],
        "test": "phpunit --no-coverage",
        "tests": "phpunit",
        "validate-deps": "composer validate --with-dependencies --strict",
        "validate-json": "composer validate --no-check-all --no-check-lock"
    }
}
